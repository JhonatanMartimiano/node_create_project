<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Dashboard</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item active">Home</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>
<section class="content">
	<ul class="col-md-12">
		<div class="row">
			{{#each recursos}}
			{{#if operacoes}}
			<a href="/app/recursos/recurso/{{codigo}}" class="btn-resource col-md-2" data-resource="{{codigo}}"
				data-description="{{descricao}}">
				<div class="small-box bg-success">
					<div class="inner">
						<h3>{{codigo}}</h3>
						<p>{{descricao}}</p>
						{{#each operacoes}}
						<div class="d-flex">
							<p>{{descricao}}</p>
							<p class="mx-1">-</p>
							<p>{{op.op}}</p>
						</div>
						{{/each}}
					</div>
				</div>
			</a>
			{{else}}
			<a href="#" class="col-md-2">
				<div class="small-box bg-warning">
					<div class="inner">
						<h3>{{codigo}}</h3>

						<p>{{descricao}}</p>
					</div>
				</div>
			</a>
			{{/if}}
			{{/each}}
		</div>
	</ul>
</section>