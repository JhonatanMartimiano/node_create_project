<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Usu√°rios</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item active">Home</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>
<section class="content">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<div class="d-flex justify-content-end align-items-center">
						<a href="/app/usuarios/usuario" class="btn btn-success btn-xs mr-2" title="Adicionar">
							<span class="fas fa-plus"></span>
						</a>
					</div>
				</div>
				<!-- /.card-header -->
				<div class="card-body p-0">
					<table class="table table-sm">
						<thead>
							<tr>
								<th>ID</th>
								<th>Nome Completo</th>
								<th>E-mail</th>
							</tr>
						</thead>
						<tbody>
							{{#each usuarios}}
							<tr>
								<td>
									<a href="/app/usuarios/usuario/{{id}}" class="nav-link p-0">{{id}}</a>
								</td>
								<td>{{full_name}}</td>
								<td>{{email}}</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
				<!-- /.card-body -->
			</div>
			<!-- /.card -->
		</div>
	</div>
</section>